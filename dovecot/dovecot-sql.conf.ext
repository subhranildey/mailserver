driver = pgsql
connect = host=127.0.1.1 dbname=DATABASE user=USER password=PASSWORD
default_pass_scheme = MD5-CRYPT
password_query = SELECT username, domain, password FROM mailbox WHERE username = '%u' AND active = 't'
# Enable quota (optional)
user_query = SELECT maildir, 5000 AS uid, 5000 AS gid, 'dict:storage=' || floor(quota/1000) || '::proxy::quota' as quota FROM mailbox WHERE username = '%u' AND active='t'
